import java.util.ArrayList;

public class CapoOfficina extends Meccanico {
	
	private static final double BONUSPERORDINE = 0.5;
	
	private ArrayList<Ordine> ordini;

	public CapoOfficina() {
		super();
	}

	public CapoOfficina(ArrayList<Ordine> ordini) {
		super();
		this.ordini = ordini;
	}

	public ArrayList<Ordine> getOrdini() {
		return ordini;
	}

	public void setOrdini(ArrayList<Ordine> ordini) {
		this.ordini = ordini;
	}
	
	public void aggiungiOrdine(Ordine nuovoOrdine){
		ordini.add(nuovoOrdine);
	}
	
	public int nOrdini(){
		return ordini.size();
	}

	@Override
	public double tredicesima() {
		// TODO Auto-generated method stub
		return  getStipendio()*2;
	}

	@Override
	public Object clone() throws CloneNotSupportedException {
		// TODO Auto-generated method stub
		return super.clone();
	}
	
	

}
