package filetesto;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class ScriviFileTesto {

	public static void main(String[] args) {
		// Scrittura su file di testo
		
		String path = "file.txt";
		String testo = "Pino dei Palazzi è stato qui!";
		
		/*
		 * Per lavorare in una risorsa, bisogna decidere in che modalità lavorarci
		 * 1. Lettura
		 * 2. Scrittura
		 * 3. Append(aggiungi in coda)
		 */
		
		
		// accesso alla risorsa
		FileWriter fw = null; //seleziona la risorsa
		BufferedWriter bw = null; //gestisce, scrive la risorsa
		
		try {
			fw = new FileWriter(path);
			bw = new BufferedWriter(fw);
			bw.write(testo);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} //se non lo trova lo crea

	}

}
